        <TextBlock HorizontalAlignment="Center" Height="35" Margin="0,10,0,0" TextWrapping="Wrap" Text="Sign Up" VerticalAlignment="Top" Width="126" FontSize="24" TextAlignment="Center" FontWeight="Bold"/>
